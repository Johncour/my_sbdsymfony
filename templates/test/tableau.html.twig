{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block piedpage %}fichier index.html.twig{% endblock %}

{% block neuf %}Ceci ne s'affichera pas{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    <table class="table table-bordered table-striped">
        <tr>
            <td>{{ tableau[0] }}</td>
        </tr>
        <tr>
            <td>{{ tableau[1] }}</td>
        </tr>
        <tr>
            <td>{{ tableau[2] }}</td>
        </tr>
                <tr>
            <td>{{ tableau[3] }}</td>
        </tr>
    </table>

    {# BOUCLE : balise for
        {% for variable in debut..fin %}
        {% endfor %}

        La variable va passer de la valeur 'debut' et la valeur 'fin' et être incrémenté de 1 à chaque tour
    #}
    <table class="table table-bordered table-striped">
        {% for i in 0..3 %}
        <tr>
            <td>{{ tableau[i] }}</td>
        </tr>
        {% endfor %}
    </table>

    <table class="table table-bordered table-striped">
        {% for i in 0..tableau|length -1 %}
        <tr>
            <td>{{ tableau[i] }}</td>
        </tr>
        {% endfor %}
    </table>

    {% for car in 'a'..'z' %}
        {{ car }}
    {% endfor %}

    <hr>

    {# Equivalent de la boucle php FOREACH 
        foreach($tableau as $valeur)
    #}

    {% for tab in tableau %}
        {{ tab }}
    {% endfor %}

    {# foreach($tableau as $indice => $valeur) #}
    {% for indice, valeur in tableau %}
        <p>{{ indice }} : {{ valeur }} </p>
        <p>{{ indice }} : {{ tableau[indice] }} </p>
    {% endfor %}

</div>
{% endblock %}